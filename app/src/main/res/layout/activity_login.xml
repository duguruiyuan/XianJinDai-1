<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--app:rightDrawable="@mipmap/regist"-->
    <com.daiqile.xianjindai.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_min_height_56"
        android:background="@color/material_white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        app:leftDrawable="@mipmap/iv_prev"
        app:title="登录"
        app:titleTextColor="@color/material_lightBlue_A200"
        app:titleTextSize="@dimen/appbar_text_size_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/divider" />

    <com.daiqile.xianjindai.view.ClearEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:cursorVisible="true"
        android:drawableLeft="@mipmap/icon_phone"
        android:drawablePadding="5dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/default_text_color"
        android:textColorHint="@color/cccccc"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/small_title_text_size_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <com.daiqile.xianjindai.view.ClearEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:cursorVisible="true"

        android:drawableLeft="@mipmap/icon_password"
        android:drawablePadding="8dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/default_text_color"
        android:textColorHint="@color/cccccc"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/small_title_text_size_16" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_blue"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="注册"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="忘记密码？"
            android:textColor="@color/blue" />
    </RelativeLayout>


