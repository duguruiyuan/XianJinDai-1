<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/material_lightBlue_A200"
            android:gravity="center"
            android:text="认证"
            android:textColor="@color/material_white"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/material_lightBlue_A200"
            android:gravity="center">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="3dp"
                android:background="@mipmap/icon_circle60"></ImageView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/circle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:text="60"
                android:textColor="@color/material_white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:background="@mipmap/icon_safe" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/circle"
                android:layout_alignStart="@+id/circle"
                android:layout_below="@+id/imageView"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:gravity="center"
                android:text="超越60%的小伙伴"
                android:textColor="@color/material_white"
                android:textSize="14sp" />
        </RelativeLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="2"-->
        <!--android:background="@color/material_lightBlue_A200"-->
        <!--android:gravity="center"-->
        <!--android:visibility="gone">-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_people_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_people_card" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_people_card"
                        android:text="身份证认证"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="随时随地更好的借贷"
                        android:textColor="@color/cccccc"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_bank_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_bank_card" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_bank_card"
                        android:text="银行卡绑定"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全可靠的还借款"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_zhima_credit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_zhima" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_zhima"
                        android:text="三方认证"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信用越高借贷越高"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_person_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_person_detail" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_person_detail"
                        android:text="个人信息"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="完善信息额度越高"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_emergency_contact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_emergency_contact" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_emergency_contact"
                        android:text="紧急联系人"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="为了更好的服务你"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_invest_password" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_invest_password"
                        android:text="密码设置"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全是我们共同的目标"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_service"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_kefu" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_kefu"
                        android:text="我的客服"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400-165-65656"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_versions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_banben" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_banben"
                        android:text="版本信息"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textSize="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/divider" />

                <LinearLayout
                    android:id="@+id/ll_loan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <!--<ImageView-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:layout_marginBottom="5dp"-->
                    <!--android:background="@mipmap/icon_loan" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/icon_loan"
                        android:text="关联贷款"
                        android:textColor="@color/font_black_content"
                        android:textSize="@dimen/tip_text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多样化的选择"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/divider" />
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center">-->

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/material_red_400" />
    </LinearLayout>

    <!--</LinearLayout>-->

</android.support.v4.widget.SwipeRefreshLayout>

