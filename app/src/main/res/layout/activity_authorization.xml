<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.daiqile.xianjindai.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_min_height_56"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        app:leftDrawable="@mipmap/iv_prev"
        app:title="授权"
        app:titleTextColor="@color/material_lightBlue_A200"
        app:titleTextSize="@dimen/appbar_text_size_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />

    <com.daiqile.xianjindai.view.ClearEditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入姓名"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/font_black_content"
        android:textColorHint="@color/text_gray"
        android:textCursorDrawable="@drawable/button_select_bg"
        android:textSize="@dimen/main_body_text_size_14" />

    <com.daiqile.xianjindai.view.ClearEditText
        android:id="@+id/et_carid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入身份证"
        android:inputType="number"
        android:textColor="@color/font_black_content"
        android:textColorHint="@color/text_gray"
        android:textCursorDrawable="@drawable/button_select_bg"
        android:textSize="@dimen/main_body_text_size_14" />

    <com.daiqile.xianjindai.view.ClearEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:textColor="@color/font_black_content"
        android:textColorHint="@color/text_gray"
        android:textCursorDrawable="@drawable/button_select_bg"
        android:textSize="@dimen/main_body_text_size_14" />

    <Button
        android:id="@+id/btn_authorization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认授权" />


</LinearLayout>
